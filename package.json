{
  "name": "secgen-ecip-client-reference",
  "description": "The Gatsby.js client-side using digit-eci-reference Drupal 8 backend.",
  "version": "0.1.0",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "private": true,
  "scripts": {
    "build:gatsby-published": "gatsby build",
    "build:gatsby-drafts": "DRAFT_PREVIEW=true gatsby build",
    "build:gatsby:prod": "run-s i18n:update build:gatsby-published",
    "build:gatsby:test": "run-s i18n:update build:gatsby-drafts",
    "build:prefixed": "gatsby build --prefix-paths",
    "build:prod": "npm run build:gatsby:prod",
    "build:test": "npm run build:gatsby:test",
    "clean:gatsby": "gatsby clean",
    "clean": "npm run clean:gatsby",
    "deploy:prod": "NETLIFY_SITE_ID=d2152720-be80-4697-ad20-89672d98ff00 netlify deploy --prod",
    "deploy:test": "NETLIFY_SITE_ID=22987b11-bc1a-4bd4-a609-48170dc859b9 netlify deploy --prod",
    "deploy": "./scripts/deploy.sh",
    "develop": "gatsby develop",
    "format": "prettier --write \"{gatsby-*.js,src/**/*.js}\"",
    "i18n:clean": "rm -rf i18n_exports",
    "i18n:export": "i18next-scanner",
    "i18n:fetch": "eci-cli translations fetch",
    "i18n:update": "run-s i18n:export i18n:fetch",
    "lint-staged": "lint-staged",
    "lint:js": "eslint .",
    "serve": "gatsby serve",
    "start": "npm run develop",
    "test:lint": "npm run lint:js",
    "test": "npm-run-all -p test:* -cn"
  },
  "dependencies": {
    "@eci/cli": "^0.1.0",
    "@ecl/eu-preset-website": "2.8.0",
    "axios": "0.19.0",
    "classnames": "2.2.6",
    "flat": "4.1.0",
    "gatsby": "2.15.11",
    "gatsby-link": "2.2.12",
    "gatsby-plugin-layout": "1.1.6",
    "gatsby-plugin-manifest": "2.2.15",
    "gatsby-plugin-react-helmet": "3.1.6",
    "gatsby-plugin-remove-trailing-slashes": "2.1.5",
    "gatsby-source-drupal-jsonapi-eci": "^0.1.0",
    "i18next": "17.0.13",
    "lodash": "4.17.15",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-helmet": "5.2.1",
    "react-i18next": "10.12.2",
    "rehype": "9.0.0",
    "rehype-slug": "2.0.3",
    "slugify": "1.3.5"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "dotenv": "8.1.0",
    "eslint": "6.3.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.2.0",
    "eslint-plugin-compat": "3.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "husky": "3.0.5",
    "i18next-scanner": "2.10.2",
    "lerna": "3.16.4",
    "lint-staged": "9.2.5",
    "netlify-cli": "2.13.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "prop-types": "15.7.2"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ec-europa/secgen-ecip-client-reference"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
