{
  "name": "ecgen-ecip-client-reference",
  "description": "The Gatsby.js client-side using digit-eci-reference Drupal 8 backend.",
  "version": "0.1.0",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "private": true,
  "scripts": {
    "api:clean": "rm -rf api",
    "api:download": "node scripts/saveInitiativesLocally.js",
    "api:serve": "node scripts/serveInitiatives.js",
    "api:start": "run-s api:download api:serve",
    "build:api": "netlify-lambda build ./src/api",
    "build:gatsby:prod": "gatsby build",
    "build:gatsby:test": "DRAFT_PREVIEW=true gatsby build",
    "build:prefixed": "gatsby build --prefix-paths",
    "build:prod": "run-p build:api build:gatsby:prod",
    "build:test": "run-p build:api build:gatsby:test",
    "clean:gatsby": "gatsby clean",
    "clean": "run-p clean:gatsby",
    "deploy:prod": "NETLIFY_SITE_ID=d2152720-be80-4697-ad20-89672d98ff00 netlify deploy --prod",
    "deploy:test": "NETLIFY_SITE_ID=22987b11-bc1a-4bd4-a609-48170dc859b9 netlify deploy --prod",
    "deploy": "./scripts/deploy.sh",
    "develop": "gatsby develop",
    "format": "prettier --write \"{gatsby-*.js,src/**/*.js}\"",
    "lint-staged": "lint-staged",
    "lint:js": "eslint .",
    "serve:api": "netlify-lambda serve src/api",
    "serve": "gatsby serve",
    "start:offline": "GATSBY_OFFLINE=true npm run develop",
    "start": "npm run develop",
    "test:lint": "npm run lint:js",
    "test": "npm-run-all -p test:* -cn"
  },
  "dependencies": {
    "@eci/cli": "^0.1.0",
    "@ecl/eu-preset-website": "2.8.0",
    "axios": "0.19.0",
    "classnames": "2.2.6",
    "gatsby-link": "2.2.4",
    "gatsby-plugin-layout": "1.1.3",
    "gatsby-plugin-react-helmet": "3.1.3",
    "gatsby-source-drupal-jsonapi-eci": "^0.1.0",
    "gatsby": "2.13.55",
    "lodash": "4.17.15",
    "react-dom": "16.9.0",
    "react-helmet": "5.2.1",
    "react": "16.9.0",
    "rehype-slug": "2.0.3",
    "rehype": "9.0.0",
    "slugify": "1.3.4"
  },
  "devDependencies": {
    "babel-eslint": "10.0.2",
    "dotenv": "8.0.0",
    "eslint-config-airbnb": "17.1.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-compat": "3.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "eslint": "6.1.0",
    "husky": "3.0.3",
    "lerna": "3.16.4",
    "lint-staged": "9.2.1",
    "netlify-cli": "2.12.0",
    "netlify-lambda": "1.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "prop-types": "15.7.2"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ec-europa/secgen-ecip-client-reference"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
